<div class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
<div class=" justify-content-center w-100 ">
  <form action="/dashbord/addCategory" method="post" class="d-block row">
    <input class=" inputcat m-5 col-10" type="text" name="name" id="" placeholder="نام دسته جدید را وارد کنید ...">
      <div class="col-2 mx-auto text-center">
        <input type="submit" value="اضافه کردن دسته بندی " class="btn btn-primary btn-md w-100">
      </div>
  </form>
</div>
<div class="container">
  <div class="row mt-5 border-1">
  <% let number=0; 
    for(let cat of category){ 
      number=number+1;
      %>

   

    <form action="/dashbord/addCategorymin/<%= cat.id %>" method="post" class="col-3 mt-5 bacbutcat">
      
      <div class="product-item">
        <h3 onclick="uishowcat()" id="colorDiv<%= number %>" on class="title-cat p-5 colorDiv"><a href="#"><%= cat.name  %></a></h3>
         <div  id="uicat">
        <input  class=" inputcat mx-auto p-2 text-center w-100" type="text" name="name" id="" placeholder="نام زیر دسته  جدید را وارد کنید ...">
       <ul class="list-group list-group-flush" >
        <% for(let catq of catmain){
          if(catq.IdCat == cat.id){
            %>

        <li class="list-group-item text-dark text-center"> <%= catq.name %></li>
        <% }} %>
        </ul>
        </div>
        <div class="w-100 justify-content-center text-center d-block">
          <a  onclick="getidauth('DELETE','<%= cat.id  %>','/dashbord/deleteCategory','/dashbord/getCategorys')" class="btn btn-danger justify-content-center text-center mx-auto d-inline-flex bottom-0  w-100 m-2 bottom-0">حذف</a>
          <a  onclick="getidauth('PUT','<%= cat.id  %>','/dashbord/editCategory','/dashbord/getCategorys','<%= cat.name %>')" class="btn btn-outline-primary text-center justify-content-center mx-auto d-inline-flex bottom-0  w-100 m-2 bottom-0">ویرایش</a>
          <input  type="submit" class="btn btn-outline-primary text-center justify-content-center mx-auto d-inline-flex bottom-0  w-100 m-2 bottom-0" value="افزودن">
        </div>
      </div>
    </form> <!-- /.item -->
    
    <% } %>
</div>
</div>
</div>





<script>
 
  function changeColors() {
    var colors = [" #5b1647 ", " #93073e ", " #c90035 ", " #c90035 ", "  #ffc400  "];

    // Loop through each div with the class 'colorDiv'
    var divs = document.getElementsByClassName("colorDiv");
    for (var i = 0; i < divs.length; i++) {
      // Generate a random index to select a color from the array
      var randomIndex = Math.floor(Math.random() * colors.length);
      // Set the background color of each div
      divs[i].style.backgroundColor = colors[randomIndex];
    }
  }
  changeColors();

    function uishowcat(){
     
      let ui=document.getElementById('uicat');
       ui.style.display = 'none';
     
    }

 
</script>



