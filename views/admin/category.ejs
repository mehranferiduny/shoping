<div class="container  px-0 mt-5 mx-auto pb-2 main-content position-relative max-height-vh-100 h-100 border-radius-lg rtl">
  <div class="row mt-5 border-1">
  <% let number=0; 
    for(let cat of category){ 
      number=number+1;
      %>

   

    <form action="/dashbord/addCategorymin/<%= cat.id %>" method="post" class="col mx-auto text-center px-2 mt-5 bacbutcat">
      
      <div class="product-item">
        <h3 onclick="uishowcat()"  class="title-cat p-5 bg-gradient-faded-secondary"><a href="#"><%= cat.name  %></a></h3>
         <div  id="uicat">
        <input  class=" inputcat mx-auto p-2 text-center w-100" type="text" name="name" id="" placeholder="نام زیر دسته  جدید را وارد کنید ...">
       <ul class="list-group list-group-flush  p-0" >
        <% for(let catq of catmain){
          if(catq.IdCat == cat.id){
            %>

        <li class="  list-group-item text-dark text-center"> <%= catq.name %>  <a href="/dashbord/deletesubCategory/<%= catq._id %>" class="position-absolute left-20 pl-2"> <span class="  text-warning fa fa-trash"></span></a></li>
       
        <% }} %>
        </ul>
        </div>
        <div class="w-100 justify-content-center text-center d-block">
          <a  onclick="getidauth('DELETE','<%= cat.id  %>','/dashbord/deleteCategory','/dashbord/getCategorys')" class="btn btn-danger justify-content-center text-center mx-auto d-inline-flex bottom-0  w-100 m-2 bottom-0">حذف</a>
          <a  onclick="getidauth('PUT','<%= cat.id  %>','/dashbord/editCategory','/dashbord/getCategorys','<%= cat.name %>')" class="btn btn-outline-primary text-center justify-content-center mx-auto d-inline-flex bottom-0  w-100 m-2 bottom-0">ویرایش</a>
          <input  type="submit" class="btn btn-outline-primary text-center justify-content-center mx-auto d-inline-flex bottom-0  w-100 m-2 bottom-0" value="افزودن">
        </div>
      </div>
    </form> 
    
    <% } %>
</div>
</div>
</div>





<script>
 


    function uishowcat(){
     
      let ui=document.getElementById('uicat');
       ui.style.display = 'none';
     
    }

 
</script>


<script>
  $(function() {
  var list = $('.js-dropdown-list');
  var link = $('.js-link');
  link.click(function(e) {
    e.preventDefault();
    list.slideToggle(200);
  });
  list.find('li').click(function() {
    var text = $(this).html();
    var icon = '<i class="fa fa-chevron-down"></i>';
    link.html(text+icon);
    list.slideToggle(200);
    if (text === '* Reset') {
      link.html('Select one option'+icon);
    }
  });
});
  </script>
