        for(let subcat of categorymin) {
          if(cat.id==subcat.IdCat){
          %>
          
          
        <option class="text-right nametab justify-content-center" value="<%= subcat._id  %>"><span class="mx-1"><%=cat.name%></span >&nbsp;-&nbsp;<%= subcat.name  %></option>
        
        <% }}} %>
    
      </select>
    </div>


   
  </div>
    <div class="mb-3">
      <label for="text6" class="form-label">توضیحات</label>
      <textarea rows="5" type="text" class="form-control nametab" id="text6" name="description" required></textarea>
    </div>
    <div class="row">
     
     

    <div class="mb-3 row">
      <input type="text" class="form-control bgsize_input col" id="siazAraay" name="size"    required>
      <div class="col">
      <label for="text3" class="form-label">سایز</label>
      <input type="text" class="form-control" id="sizeInput"   >
